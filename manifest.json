{
  "manifest_version": 2,
  "name": "Sportacus - Simple Stat Estimator (SSE)",
  "version": "1.2",
  "description": "Shows YATA battle stat estimates on Torn profile pages. Stores a single API key.",
  "permissions": [
    "storage",
    "https://yata.yt/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "SSE - set API key",
     "default_icon": "10.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.torn.com/profiles.php*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
